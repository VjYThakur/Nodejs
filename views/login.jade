extends layout

block content
  .container-fluid.d-flex.align-items-center.justify-content-center.min-vh-100
    .container
      .row.justify-content-center
        .col-lg-4.col-md-6.col-sm-8.col-10
          .border.border-secondary.rounded.p-5.bg-light.shadow-lg
            h2.text-center Login
            if error
              .alert.alert-danger #{error}
            form(action="/login" method="POST")
              .form-group
                label(for="email") Email
                input.form-control(type="email" name="email" id="email" placeholder="Enter your email" required)
              .form-group
                label(for="password") Password
                input.form-control(type="password" name="password" id="password" placeholder="Enter your password" required)
                .row 
                .col.mt-4.justify-content-between
              button.btn.btn-primary.btn-block(type="submit") Login
              a.btn.btn-secondary.btn-block(href="/") Back to Signup

