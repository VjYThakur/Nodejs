extends layout

block content
  .container-fluid.mt-5
    h1.text-center.mb-4 Registered Users

    table.table.table-striped
      thead
        tr
          th First Name
          th Last Name
          th Email
          th Actions
      tbody
        each user in users
          tr
            td= user.firstName
            td= user.lastName
            td= user.email
            td
              a.btn.btn-primary(href="/edit/" + user._id) Edit
